{
    "manifest_version": 2,
  
    "name": "DoodleChrome",
    "description": "Doodle",
    "version": "1.1",
  
    "icons": { "16": "pen16.png",
             "48": "pen48.png",
            "128": "pen128.png" },
            
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["node_modules/jquery/dist/jquery.min.js", "canvas.js", "node_modules/bootstrap/dist/js/bootstrap.min.js", "jscolor.js" ],
        "css": ["popuptest.css", "node_modules/bootstrap/dist/css/bootstrap.min.css", "node_modules/@fortawesome/fontawesome-free-webfonts/css/fontawesome.css"]
      }
    ],
    "web_accessible_resources": [
      "popup.html",
      "test.html",
      "popuptest.html",
      "node_modules/bootstrap/dist/css/bootstrap.min.css",
      "node_modules/@fortawesome/fontawesome-free-webfonts/css/fontawesome.css",
      "jscolor.js"
    ],
    "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*",
      "<all_urls>"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    }
  }