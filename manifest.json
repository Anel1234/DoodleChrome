{
    "manifest_version": 2,
  
    "name": "DoodleChrome",
    "description": "Doodle",
    "version": "1.1",
  
    "icons": { "16": "pen16.png",
             "48": "pen48.png",
            "128": "pen128.png" },
            
    "content_scripts": [
      {
        "matches": ["https://en.wikipedia.org/*"],
        "js": ["node_modules/jquery/dist/jquery.min.js", "canvas.js", "popupScript.js"]
      }
    ],
    "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "js": "popupScript.js"
    }
  }